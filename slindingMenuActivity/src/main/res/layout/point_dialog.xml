<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/dititle"
        android:layout_width="210dp"
        android:layout_height="40dip"
        android:background="@drawable/dilogtitle_background" >

        <TextView
            android:id="@+id/cctv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:text="详       情"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/point_dialog_nearby"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/fujin_bg"
            android:drawableLeft="@drawable/fujin"
            android:gravity="center"
            android:padding="5dip"
            android:text="附近"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/point_dialog_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dititle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="#EF221F"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/point_dialog_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/point_dialog_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip" />

    <TextView
        android:id="@+id/point_dialog_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/point_dialog_iv"
        android:layout_margin="5dp"
        android:gravity="center_vertical|left"
        android:minLines="2"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textColor="#666666" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_below="@+id/point_dialog_tv"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:padding="4dp" />

</RelativeLayout>