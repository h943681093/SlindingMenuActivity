<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/dititle"
        android:layout_width="210dp"
        android:layout_height="40dip"
        android:background="@drawable/dilogtitle_background" >

        <TextView
            android:id="@+id/cctv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="详       情"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/point_dialog_name2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dititle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:textColor="#EF221F"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ditime2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/point_dialog_tv2"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:hint="2012-05-15"
        android:padding="4dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/diPhone2"
        style="@style/Smile.TextView._White"
        android:layout_height="24dip"
        android:layout_alignBottom="@+id/ditime2"
        android:layout_alignRight="@id/point_dialog_name2"
        android:layout_marginBottom="4dp"
        android:autoLink="phone"
        android:background="@drawable/press_bluedeeper"
        android:drawableLeft="@drawable/icon_photo"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|left"
        android:text="认领  "
        android:textColor="#ffffff"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="3dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/point_dialog_tv2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/diPhone2"
        android:layout_below="@+id/point_dialog_name2"
        android:layout_margin="5dp"
        android:minLines="3"
        android:gravity="center_vertical|left"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:textColor="#666666" />

</RelativeLayout>