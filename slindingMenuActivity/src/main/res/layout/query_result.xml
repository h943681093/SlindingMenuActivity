<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
       <LinearLayout 
        android:id="@+id/result_re1"
       	android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:clickable="true"
        android:background="@drawable/scnews_title"
        android:orientation="horizontal">
        	<ImageView 
            	android:id="@+id/query_result_back"
         		android:layout_width="54dip"
           		android:layout_height="fill_parent"
            	android:layout_gravity="center"
            	android:clickable="true"
            	android:background="@drawable/seachicon_bg"
            	android:scaleType="centerInside"
            	android:src="@drawable/query_head_back"/>
        	 <ImageView
                android:layout_width="2px"
                android:layout_height="24dip"
                android:layout_gravity="center"
                android:src="@drawable/scnews_title" />
       
        
       
        <TextView 
            	android:id="@+id/result_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text=""
                android:textColor="#FFFFFF"
            	android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="8dip"/>
        
        <ImageView
        	android:id="@+id/result_location"
        	android:layout_width="54dip"
        	android:layout_height="fill_parent"
        	android:background="@drawable/v5_0_1_flipper_head_title_wrapper_background"
        	android:clickable="true"
        	android:scaleType="centerInside"
        	android:src="@drawable/v5_0_1_flipper_head_checkin" />
        
      

     </LinearLayout>
    
<ListView
    android:id="@+id/result_lv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:cacheColorHint="#00000000"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/result_re1"
    android:divider="@drawable/list_item_separate"
    android:listSelector="#00000000"
    android:background="#F7F7F7" >

</ListView>

    
</RelativeLayout>
