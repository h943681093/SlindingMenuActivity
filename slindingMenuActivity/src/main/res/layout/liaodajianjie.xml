<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BE3FF" >

         <RelativeLayout
            android:id="@+id/jianjietitle"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/scnews_title" >

            <ImageView
                android:id="@+id/jianjie_back"
                android:layout_width="54dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:clickable="true"
                android:scaleType="centerInside"
                android:background="@drawable/seachicon_bg"
                android:src="@drawable/news__back" />

            <ImageView
                android:layout_width="2px"
                android:layout_height="24dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/jianjie_back"
                android:src="@drawable/v5_0_1_flipper_head_separator" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical|left"
                android:paddingLeft="60dip"
                android:text="聊大简介"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>

    <ImageView
        android:id="@+id/sytitle"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/jianjietitle"
        android:background="@drawable/liaodadamen" />

    <RelativeLayout
        android:id="@+id/syfgx"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/sytitle"
        android:layout_marginTop="1dp"
        android:background="#3011111B" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/st_fgx"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:background="#3011111B" >
    </RelativeLayout>

    <include
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/st_fgx2"
        layout="@layout/lcjj_include" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="1dp"
        android:background="#FEFEFE" >

        <ImageButton
            android:id="@+id/search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/v5_0_1_friend_search_icon" />

        <EditText
            android:id="@+id/search_search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_bg"
            android:drawablePadding="8dip"
            android:focusableInTouchMode="true"
            android:hint="请输入你想要去的地点"
            android:paddingRight="30dip"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>