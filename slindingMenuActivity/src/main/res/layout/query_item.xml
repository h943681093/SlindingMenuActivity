<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/query_item_pic"
        android:layout_width="100dip"
        android:layout_height="80dip"
        android:layout_margin="8dip"
        android:scaleType="centerCrop"
        android:src="@drawable/v5_0_1_nearby_activity_photo_bg" />

    <TextView
        android:id="@+id/query_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/query_item_pic"
        android:layout_toLeftOf="@+id/query_item_location"
        android:layout_toRightOf="@+id/query_item_pic"
        android:padding="8dip"
        android:text="查询得到的名称"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/query_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/query_item_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/query_item_name"
        android:padding="8dip"
        android:src="@drawable/location" />

    <TextView
        android:id="@+id/query_item_infor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/query_item_name"
        android:layout_below="@+id/query_item_name"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dip"
        android:textColor="#888888"
        android:text="查询得到的内容：介绍详细信息"
        android:textSize="12sp" />

    <Button
        android:id="@+id/query_item_near"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/query_item_pic"
        android:layout_marginBottom="5dip"
        android:drawableLeft="@drawable/fujin"
        android:gravity="center"
        android:padding="5dip"
        android:text="附近"
        android:background="@drawable/fujin_bg"
        android:textColor="#828385" />

</RelativeLayout>