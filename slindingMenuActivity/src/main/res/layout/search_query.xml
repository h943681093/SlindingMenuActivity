<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/scnews_title" >

        <ImageView
            android:id="@+id/query_query"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/seachicon_bg"
            android:src="@drawable/ic_action_search" />

        <EditText
            android:id="@+id/query_edittext"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/query_query"
            android:layout_toRightOf="@+id/query_back"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:hint="请输入遗失的物品"
            android:textSize="18sp" 
            android:textColorHint="#D3D4D4"
            android:maxLength="25"/>

        <ImageView
            android:id="@+id/query_back"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/query_edittext"
            android:layout_margin="3dip"
            android:background="@drawable/seachicon_bg"
            android:src="@drawable/query_head_back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="#EDEDED"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/search_query_gaoji"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/gaoji_bg"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/btbg_zj"
                android:text="高级搜索" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/query_1"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/zs_bg"
                android:text="手机" />

            <Button
                android:id="@+id/query_2"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/zj_bg"
                android:text="饭卡" />

            <Button
                android:id="@+id/query_3"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/zj_bg"
                android:text="钱包" />

            <Button
                android:id="@+id/query_4"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/ys_bg"
                android:text="钥匙" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/query_5"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/thirdbtbg_left_bg"
                android:text="书包" />

            <Button
                android:id="@+id/query_6"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/thirdbtbg_middle_bg"
                android:text="身份证" />

            <Button
                android:id="@+id/query_7"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/thirdbtbg_middle_bg"
                android:text="课本" />

            <Button
                android:id="@+id/query_8"
                android:layout_width="fill_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@drawable/thirdbtbg_right_bg"
                android:text="学生证" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>